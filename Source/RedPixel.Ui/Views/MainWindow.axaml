<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RedPixel.Ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utility="clr-namespace:RedPixel.Ui.Utility"
        xmlns:tools="clr-namespace:RedPixel.Ui.Views.Tools"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="RedPixel.Ui.Views.MainWindow"
        ExtendClientAreaToDecorationsHint="{Binding ExtendClientAreaToDecorationsHint}"
        ExtendClientAreaTitleBarHeightHint="40"
        Background="#3c3f41"
        Icon="/Assets/avalonia-logo.ico"
        Title="RedPixel.Ui">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
        <utility:PnmBitmapValueConverter x:Key="ImageConverter" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Menu">
            <Setter Property="Background" Value="#3c3f41" />
        </Style>
        <Style Selector="Grid.main">
            <Setter Property="Background" Value="#1e1f22" />
        </Style>
        <Style Selector="StackPanel.tools">
            <Setter Property="Background" Value="#2b2d30" />
        </Style>
        <Style Selector="Window[WindowState=Maximized]">
            <Setter Property="Padding" Value="8" />
        </Style>
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Styles>

    <DockPanel>
        <Menu DockPanel.Dock="Top"
              HorizontalAlignment="Left"
              Width="110"
              Height="30">
            <MenuItem Header="File">
                <MenuItem
                    Header="Open"
                    Command="{Binding OpenImageAsync}" />
                <Separator />
                <MenuItem
                    Header="Save"
                    Command="{Binding SaveImageAsync}" />
            </MenuItem>
        </Menu>
        <ScrollViewer DockPanel.Dock="Right">
            <TabControl
                Classes="tools"
                Width="250"
                ZIndex="50">
                <TabItem Header="Color Space">
                    <tools:ColorSpaceTool
                        DataContext="{Binding ColorSpaceToolViewModel}" />
                </TabItem>
                <TabItem Header="Gamma correction">
                    <tools:GammaCorrectionTool
                        DataContext="{Binding GammaConversionToolViewModel }" />
                </TabItem>
                <TabItem Header="Line drawing">
                    <tools:LineDrawingTool
                        DataContext="{Binding LineDrawingToolViewModel }" />
                </TabItem>
                <TabItem Header="Dithering">
                    <tools:DitheringTool
                        DataContext="{Binding DitheringToolViewModel }" />
                </TabItem>
                <TabItem Header="Utility">
                    <tools:UtilitiesTool
                        DataContext="{Binding UtilitiesToolViewModel }" />
                </TabItem>
            </TabControl>
        </ScrollViewer>
        <Grid Classes="main"
              ZIndex="20">
            <ScrollViewer>
                <ZoomBorder Name="ZoomBorder" ZoomSpeed="1.2" PanButton="Left"
                            MinZoomX="0.05" MinZoomY="0.05">
                    <Image
                        PointerPressed="InputElement_OnPointerPressed"
                        UseLayoutRounding="False"
                        Margin="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Source="{Binding Bitmap}"
                        Stretch="Uniform"
                        RenderOptions.BitmapInterpolationMode="Default" />
                </ZoomBorder>
            </ScrollViewer>
            <Line
                Stroke="Red"
                StrokeThickness="4"
                StartPoint="{Binding StartPoint1}"
                EndPoint="{Binding EndPoint1}"
                IsVisible="{Binding DrawingInProgress}"
                DataContext="{Binding LineDrawingToolViewModel}" />
            <Line
                Stroke="Red"
                StrokeThickness="4"
                StartPoint="{Binding StartPoint2}"
                EndPoint="{Binding EndPoint2}"
                IsVisible="{Binding DrawingInProgress}"
                DataContext="{Binding LineDrawingToolViewModel}" />
        </Grid>
    </DockPanel>
</Window>