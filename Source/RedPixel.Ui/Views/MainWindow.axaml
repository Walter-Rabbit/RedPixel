<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RedPixel.Ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utility="clr-namespace:RedPixel.Ui.Utility"
        xmlns:tools="clr-namespace:RedPixel.Ui.Views.Tools"
        xmlns:utilities="clr-namespace:RedPixel.Ui.Views.Utilities"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="RedPixel.Ui.Views.MainWindow"
        ExtendClientAreaToDecorationsHint="{Binding ExtendClientAreaToDecorationsHint}"
        ExtendClientAreaTitleBarHeightHint="40"
        Background="#3c3f41"
        Icon="/Assets/avalonia-logo.ico"
        Title="RedPixel.Ui"
        KeyDown="InputElement_OnKeyDown">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
        <utility:PnmBitmapValueConverter x:Key="ImageConverter" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Menu">
            <Setter Property="Background" Value="#3c3f41" />
        </Style>
        <Style Selector="Grid.main">
            <Setter Property="Background" Value="#1e1f22" />
        </Style>
        <Style Selector="TabControl.tools">
            <Setter Property="Background" Value="#2b2d30" />
        </Style>
        <Style Selector="Window[WindowState=Maximized]">
            <Setter Property="Padding" Value="8" />
        </Style>
        <Style Selector="TabItem">
            <Setter Property="Padding" Value="10,0,0,0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#3c3f41" />
            <Setter Property="Width" Value="40" />
        </Style>
        <Style Selector="Image.tool">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
        </Style>
    </Window.Styles>

    <DockPanel>
        <Menu DockPanel.Dock="Top"
              HorizontalAlignment="Left"
              Width="60"
              Height="30">
            <MenuItem Header="File">
                <MenuItem
                    Header="Open"
                    Command="{Binding OpenImageAsync}" />
                <Separator />
                <MenuItem
                    Header="Save"
                    Command="{Binding SaveImageAsync}" />
            </MenuItem>
        </Menu>
        <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="300,40" DockPanel.Dock="Right">
            <TabControl
                Grid.ColumnSpan="2"
                Classes="tools"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Margin="0"
                Padding="0"
                TabStripPlacement="Right">
                <TabItem>
                    <TabItem.Header>
                        <Image ToolTip.Tip="Color Space"
                               Classes="tool"
                               Source="../Assets/color-space.png" />
                    </TabItem.Header>
                    <tools:ColorSpaceTool
                        Name="ColorSpace"
                        DataContext="{Binding ColorSpaceToolViewModel}" />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image ToolTip.Tip="Gamma Correction"
                               Classes="tool"
                               Source="../Assets/gamma-correction.png" />
                    </TabItem.Header>
                    <tools:GammaCorrectionTool
                        Name="GammaCorrection"
                        DataContext="{Binding GammaConversionToolViewModel }" />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image ToolTip.Tip="Line Drawing"
                               Classes="tool"
                               Source="../Assets/line-drawing.png" />
                    </TabItem.Header>
                    <tools:LineDrawingTool
                        Name="LineDrawing"
                        DataContext="{Binding LineDrawingToolViewModel }" />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image ToolTip.Tip="Disering"
                               Classes="tool"
                               Source="../Assets/disering.png"
                               RenderOptions.BitmapInterpolationMode="HighQuality" />
                    </TabItem.Header>
                    <tools:DitheringTool
                        Name="Dithering"
                        DataContext="{Binding DitheringToolViewModel }" />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image ToolTip.Tip="Filtering"
                               Classes="tool"
                               Source="../Assets/filtering.png" />
                    </TabItem.Header>
                    <tools:FilteringTool
                        Name="Filtering"
                        DataContext="{Binding FilteringToolViewModel }" />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image ToolTip.Tip="Scaling"
                               Classes="tool"
                               Source="../Assets/scaler.png" />
                    </TabItem.Header>
                    <tools:ScalingTool
                        Name="Scaling"
                        DataContext="{Binding ScalingToolViewModel }" />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image ToolTip.Tip="Utilities"
                               Classes="tool"
                               Source="../Assets/utilities.png" />
                    </TabItem.Header>
                    <tools:UtilitiesTool
                        Name="Utilities"
                        DataContext="{Binding UtilitiesToolViewModel }" />
                </TabItem>
            </TabControl>
            <Grid Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#2b2d30" />
                <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Stretch" Width="40" Background="#3c3f41" />
            <tools:HistogramTool Name="Histogram" Background="#2b2d30" Grid.Column="0" Grid.Row="2" DataContext="{Binding HistogramToolViewModel }" />
        </Grid>
        <Grid Classes="main">
            <ZoomBorder Name="ZoomBorder" ZoomSpeed="1.2" PanButton="Left"
                        MinZoomX="0.05" MinZoomY="0.05" ClipToBounds="True">
                <Image

                    PointerPressed="InputElement_OnPointerPressed"
                        PointerMoved="InputElement_OnPointerMoved"
                        UseLayoutRounding="False"
                        Margin="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Source="{Binding Bitmap}"
                        Stretch="Uniform"
                        RenderOptions.BitmapInterpolationMode="Default" 
                        Width="{Binding ImageWidth}"
                        Height="{Binding ImageHeight}"
                        Canvas.Left="{Binding LeftImageMargin}"
                        Canvas.Top="{Binding TopImageMargin}"/>
                    <Line
                        Stroke="{Binding AvaloniaColor}"
                        StrokeThickness="{Binding Thickness}"
                        IsHitTestVisible="False"
                        StartPoint="{Binding StartPoint}"
                        EndPoint="{Binding EndPoint}"
                        IsVisible="{Binding DrawingInProgress}"
                        DataContext="{Binding LineDrawingToolViewModel}" />
                    <utilities:Selection Name="Selection" DataContext="{Binding SelectionViewModel}" />
                </Canvas>

            </ZoomBorder>
        </Grid>
    </DockPanel>
</Window>