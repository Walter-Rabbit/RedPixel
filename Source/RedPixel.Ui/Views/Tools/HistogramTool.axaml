<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolViewModels="clr-namespace:RedPixel.Ui.ViewModels.ToolViewModels"
             xmlns:avalonia="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RedPixel.Ui.Views.Tools.HistogramTool">
    <Design.DataContext>
        <toolViewModels:HistogramToolViewModel />
    </Design.DataContext>
    <StackPanel>
        <avalonia:AvaPlot LeftClicked="Histogram1_OnLeftClicked" IsVisible="{Binding MainWindowViewModel.ColorSpaceToolViewModel.EnabledComponents[0]}" Name="Histogram1" Width="300" Height="150" />
        <avalonia:AvaPlot IsVisible="{Binding MainWindowViewModel.ColorSpaceToolViewModel.EnabledComponents[1]}"  Name="Histogram2" Width="300" Height="150" />
        <avalonia:AvaPlot IsVisible="{Binding MainWindowViewModel.ColorSpaceToolViewModel.EnabledComponents[2]}"  Name="Histogram3" Width="300" Height="150" />
    </StackPanel>
</UserControl>
