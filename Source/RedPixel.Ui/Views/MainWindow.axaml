<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RedPixel.Ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utility="clr-namespace:RedPixel.Ui.Utility"
        xmlns:tools="clr-namespace:RedPixel.Ui.Views.Tools"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="RedPixel.Ui.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="RedPixel.Ui">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
        <utility:PnmBitmapValueConverter x:Key="ImageConverter" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Menu">
            <Setter Property="Background" Value="#3c3f41" />
        </Style>
        <Style Selector="Grid.main">
            <Setter Property="Background" Value="#1e1f22" />
        </Style>
        <Style Selector="StackPanel.tools">
            <Setter Property="Background" Value="#2b2d30" />
        </Style>
    </Window.Styles>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem
                    Header="Open"
                    Command="{Binding OpenImageAsync}" />
                <Separator />
                <MenuItem
                    Header="Save"
                    Command="{Binding SaveImageAsync}" />
            </MenuItem>
            <MenuItem Header="Tools">
                <CheckBox
                    Content="Color Spaces"
                    Command="{Binding SwitchColorSpaces}" />
                <CheckBox
                    Content="Gamma Correction"
                    Command="{Binding SwitchGammaCorrection}" />
                <CheckBox
                    Content="Dithering"
                    Command="{Binding SwitchDithering}" />
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Right"
                    Orientation="Vertical"
                    Classes="tools"
                    Width="200"
                    ZIndex="50"
                    IsVisible="{Binding ToolPanelIsVisible}">
            <tools:ColorSpaceTool
                IsVisible="{Binding IsVisible}"
                DataContext="{Binding ColorSpaceToolViewModel}" />
            <tools:GammaCorrectionTool
                IsVisible="{Binding IsVisible}"
                DataContext="{Binding GammaConversionToolViewModel }" />
            <tools:DitheringTool
                IsVisible="{Binding IsVisible}"
                DataContext="{Binding DitheringToolViewModel }" />
        </StackPanel>
        <Grid Classes="main"
                ZIndex="20">
            <ScrollViewer>
                <ZoomBorder Name="ZoomBorder" ZoomSpeed="1.2" PanButton="Left"
                            MinZoomX="0.05" MinZoomY="0.05">
                    <Image
                        Margin="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Source="{Binding Bitmap}"
                        Stretch="Uniform"
                        RenderOptions.BitmapInterpolationMode="Default">
                    </Image>
                </ZoomBorder>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>